{
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "files.associations": {
        "**/i3/config": "i3"
    },
    "files.autoSave": "afterDelay",
    "security.workspace.trust.untrustedFiles": "open",
    "javascript.updateImportsOnFileMove.enabled": "always",
    "zenMode.hideLineNumbers": false,
    "zenMode.hideActivityBar": false,
    "zenMode.fullScreen": false,
    "zenMode.silentNotifications": false,
    "workbench.editor.untitled.hint": "hidden",
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.value": 15,
    "terminal.integrated.defaultProfile.linux": "tmux",
    "cmake.configureOnOpen": true,
    "rust-analyzer.server.extraEnv": null,
    "window.zoomLevel": 1,
    "errorLens.enabledDiagnosticLevels": [
        "warning",
        "info",
        "error"
    ],
    "editor.largeFileOptimizations": false,
    "[cpp]": {
        "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
    },
    "workbench.startupEditor": "none",
    "C_Cpp.intelliSenseEngine": "disabled",
    /************************************
     * Custom settings manually edited *
     ************************************/
    // --------------
    // Font
    "editor.fontFamily": "'Fira Code', 'Droid Sans Mono', 'monospace', monospace, 'Font Awesome 6 Brands'",
    "editor.fontLigatures": true,
    "editor.formatOnSaveMode": "modifications",
    "editor.lineHeight": 1.8,
    "editor.fontWeight": "450",
    "editor.inlayHints.fontSize": 11,
    "editor.letterSpacing": 0,
    "editor.inlayHints.padding": true,
    "editor.minimap.renderCharacters": false,
    "editor.minimap.maxColumn": 50,
    "editor.minimap.autohide": true,
    "editor.scrollbar.verticalScrollbarSize": 5,
    // -----------
    // Error Lens
    "errorLens.fontWeight": "200",
    "errorLens.fontStyleItalic": true,
    "errorLens.fontSize": "0.8em",
    // -------------------
    // Color customizations
    "workbench.colorCustomizations": {
        "editor.background": "#111920",
        "editor.foreground": "#d0d0d0",
        "editorInlayHint.background": "#ffffff0e",
        "editorInlayHint.foreground": "#878686",
        "errorLens.errorBackground": "#712b2d0d",
        "errorLens.errorForeground": "#f58b8b",
        "editorIndentGuide.background": "#161f27",
        "editorIndentGuide.activeBackground": "#273946",
        "editorError.foreground": "#b44848",
        "editorLineNumber.foreground": "#273540",
        "editorLineNumber.activeForeground": "#6290b3",
        "editor.lineHighlightBackground": "#19242d",
    },
    // ----------------
    // Token customizations
    "editor.tokenColorCustomizations": {
        "types": "#ffb351",
        "functions": "#ffffff",
        "strings": "#a9c444",
        "textMateRules": [
            {
                "scope": "entity.name.namespace",
                "settings": {
                    "foreground": "#7792b2"
                }
            },
            {
                "scope": "support.class",
                "settings": {
                    "foreground": "#efd855"
                }
            },
            {
                "scope": "keyword.control.directive.include, keyword.control.directive.include",
                "settings": {
                    "foreground": "#78f762"
                }
            },
            {
                "scope": "keyword.control",
                "settings": {
                    "foreground": "#73ee67"
                }
            },
        ]
    },
    "editor.mouseWheelZoom": true,
    "git.openRepositoryInParentFolders": "never",
    "editor.unicodeHighlight.nonBasicASCII": false,
    "[toml]": {
        "editor.defaultFormatter": "be5invis.toml"
    },
    "git.autofetch": false,
    "kotlin.languageServer.enabled": false,
    "kotlin.debugAdapter.enabled": false,
    "workbench.editor.mouseBackForwardToNavigate": true
}